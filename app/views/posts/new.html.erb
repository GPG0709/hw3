<h3> Please complete the following to add a new activity </h3>

<%= form_with :model => @post do |form| %>
  <p>
    <%= form.label "Title" %>
    <%= form.text_field "title" %>
  </p>
  <p>
    <%= form.label "Description" %>
    <%= form.text_field "description" %>
  </p>
  <p>
    <%= form.label "Date" %>
    <%= form.date_field "posted_on" %>
  </p>
    <p>
    <%= form.hidden_field "place_id" %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<p> 
  <a href="/places"> Return to the Log </a>
  </p>
  