<h1>Activities in <%= @place["name"]%></h1>

<h2> <%= @place["country"]%> </h2>

<ul>
    <% for post in @posts %>
    <li>
    <h3><%= post["posted_on"] %>,  <%= post["title"] %></h3>
    <p> <%= post["description"] %> <p>
    </li>
    <% end %>
</ul>

<p>
    <a href="/posts/new?place_id=<%= @place["id"] %>" > New activity <%= @place["name"] %> </a>
</p>

<p>
    <a href="/places"> Back to all places </a>
</p>
